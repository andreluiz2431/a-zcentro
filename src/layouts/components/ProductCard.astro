---
export interface Props {
  title: string;
  image: string;
  price: string;
  link: string;
}

const { title, image, price, link } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h2 class="text-lg font-semibold">{title}</h2>
    <p class="text-gray-600 mt-2">{price}</p>
    <div class="mt-4 flex space-x-2">
      <a href={link} class="bg-blue-500 text-white px-4 py-2 rounded">Comprar</a>
      <a href={link} class="bg-gray-300 text-gray-900 px-4 py-2 rounded">Ver Mais</a>
    </div>
  </div>
</article>
