---
import Layout from "../layouts/Base.astro";
import { IoAddCircle } from 'react-icons/io5';
---

<Layout title="Add a new friend">
  <section class="section-sm">
    <div class="container">
      <h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-gray-100 text-center">Add a new friend</h1>
      <form method="post" action="/api/friends" class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 max-w-lg mx-auto">
        <div class="mb-4">
          <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-input w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100"
            placeholder="Enter friend's name"
          />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Age</label>
          <input
            type="number"
            id="age"
            name="age"
            class="form-input w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100"
            placeholder="Enter friend's age"
          />
        </div>
        <div class="mb-6">
          <label class="flex items-center text-gray-700 dark:text-gray-300">
            <input
              type="checkbox"
              id="isBestFriend"
              name="isBestFriend"
              class="form-checkbox h-5 w-5 text-blue-500 border-gray-300 dark:border-gray-700 dark:bg-gray-900"
            />
            <span class="ml-2">Ã‰ melhor amigo?</span>
          </label>
        </div>
        <button
          type="submit"
          class="flex items-center justify-center px-4 py-2 bg-blue-500 dark:bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-600 dark:hover:bg-blue-500 transition-colors duration-300"
        >
          <IoAddCircle />
          Adicionar amigo
        </button>
      </form>
    </div>
  </section>
</Layout>